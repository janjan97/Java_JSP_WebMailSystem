<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Relative URL for the WebMail System</description>
        <param-name>HomeDirectory</param-name>
        <param-value>/maven_webmail/</param-value>
    </context-param>
    <error-page>
        <error-code>404</error-code>
        <location>/login_fail.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/login_fail.jsp</location>
    </error-page>
    <context-param>
        <description>SMTP/POP3 서버의 IP 주소 또는 호스트 이름</description>
        <param-name>host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdminHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.UserAdminHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteMailHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.WriteMailHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadMailHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.ReadMailHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.RegisterHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrashHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.TrashHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BanHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.BanHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <servlet-class>cse.maven_webmail.control.AdminDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminMainPageServlet</servlet-name>
        <servlet-class>cse.maven_webmail.control.AdminMainPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeluserServlet</servlet-name>
        <servlet-class>cse.maven_webmail.control.DeluserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChkPasswordHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.ChkPasswordHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDataHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.UpdateDataHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindidHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.FindidHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindpwHandler</servlet-name>
        <servlet-class>cse.maven_webmail.control.FindpwHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdminHandler</servlet-name>
        <url-pattern>/UserAdmin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteMailHandler</servlet-name>
        <url-pattern>/WriteMail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadMailHandler</servlet-name>
        <url-pattern>/ReadMail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterHandler</servlet-name>
        <url-pattern>/RegisterHandler.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrashHandler</servlet-name>
        <url-pattern>/Trash.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BanHandler</servlet-name>
        <url-pattern>/Ban.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <url-pattern>/AdminDeleteServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminMainPageServlet</servlet-name>
        <url-pattern>/AdminMainPageServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeluserServlet</servlet-name>
        <url-pattern>/DeluserServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChkPasswordHandler</servlet-name>
        <url-pattern>/ChkPasswordHandler.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDataHandler</servlet-name>
        <url-pattern>/UpdateDataHandler.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindidHandler</servlet-name>
        <url-pattern>/FindidHandler.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindpwHandler</servlet-name>
        <url-pattern>/FindpwHandler.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
